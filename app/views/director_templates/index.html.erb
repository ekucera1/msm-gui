<h1>
  List of all directors
</h1>

<form action="/insert_director_record" method="post">
  <div>
    <label for="title_field">Name</label>
    <input id="title_field" type="text" name="name">
  </div>
  <div>
    <label for="year_field">Dob</label>
    <input id="year_field" type="text" name="the_year">
  </div>
  <div>
    <label for="duration_field">Bio</label>
    <input id="duration_field" type="text" name="the_duration">
  </div>
  <div>
    <label for="description_field">Image</label>
    <input id="description_field" type="text" name="the_description">
  </div>
  <button>
    Create director
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
